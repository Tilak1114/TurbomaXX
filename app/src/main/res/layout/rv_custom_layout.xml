<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_models_bck"
    android:elevation="5dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/parent_lay_model"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:translationZ="8dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:scaleType="centerCrop"
            android:layout_width="70dp"
            android:background="@drawable/huracanspyder"
            android:layout_marginStart="1dp"
            android:layout_centerVertical="true"
            android:id="@+id/modelPic"
            android:layout_height="70dp" />
        <RelativeLayout
            android:layout_toRightOf="@id/modelPic"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/ModelName"
                android:text="Lamborghini huracan spyder"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/batmforever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ModelType"
                android:textSize="11sp"
                android:text="Convertibles"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/batmforever"
                android:layout_below="@id/ModelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/fuelType"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:text="Gasoline"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/batmforever"
                android:layout_below="@id/ModelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>